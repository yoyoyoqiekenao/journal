<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12/2016"/>

    <TextView
        android:layout_marginRight="10dp"
        android:id="@+id/tv_surplus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:drawableLeft="@mipmap/icon_show_trans_balance"/>

    <TextView
        android:id="@+id/tv_income"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/tv_surplus"
        android:drawableLeft="@mipmap/icon_show_trans_in"/>

    <TextView
        android:id="@+id/tv_payout"
        android:layout_width="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/tv_income"
        android:drawableLeft="@mipmap/icon_show_trans_out"/>


</RelativeLayout>