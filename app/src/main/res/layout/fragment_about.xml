<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:settingItem="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.dzt.journal.settings.FragmentSettingMain">

    <com.dzt.journal.widgets.TitleView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:background="@color/gray_bg">

        <ImageView
            android:id="@+id/iv_app_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/padding_margin_15"/>

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_app_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/padding_margin_10"
            android:layout_marginTop="@dimen/padding_margin_15"
            android:textSize="@dimen/text_size_18SP"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_bg"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_margin_15"
        android:paddingTop="@dimen/padding_margin_15">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:gravity="center_horizontal"
            android:text="@string/text_company"
            android:textSize="@dimen/text_size_12SP"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:gravity="center_horizontal"
            android:text="@string/text_copyright"
            android:textSize="@dimen/text_size_12SP"/>
    </LinearLayout>
</RelativeLayout>
